<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlaceOrder">

    <EditText
        android:id="@+id/quantity5"
        android:layout_width="67dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/quantity3"
        android:layout_alignTop="@+id/checkBox5"
        android:ems="10"
        android:inputType="number"
        android:text="0" />

    <EditText
        android:id="@+id/quantity4"
        android:layout_width="67dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/quantity3"
        android:layout_alignTop="@+id/checkBox4"
        android:ems="10"
        android:inputType="number"
        android:text="0" />

    <EditText
        android:id="@+id/quantity1"
        android:layout_width="67dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/checkBox1"
        android:layout_marginEnd="78dp"
        android:ems="10"
        android:inputType="number"
        android:text="0" />

    <EditText
        android:id="@+id/quantity2"
        android:layout_width="67dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/quantity3"
        android:layout_alignTop="@+id/checkBox2"
        android:ems="10"
        android:inputType="number"
        android:text="0" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/checkBox2"
        android:layout_marginTop="82dp"
        android:text="Menu:"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <CheckBox
        android:id="@+id/checkBox5"
        android:layout_width="200dp"
        android:layout_height="47dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/checkBox2"
        android:layout_marginBottom="166dp"
        android:text="Bacon and Egg($5)"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="90dp" />

    <CheckBox
        android:id="@+id/checkBox4"
        android:layout_width="200dp"
        android:layout_height="47dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/checkBox2"
        android:layout_marginBottom="235dp"
        android:text="Soup ($10)"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="90dp" />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="200dp"
        android:layout_height="46dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/checkBox2"
        android:layout_marginTop="259dp"
        android:text="Grilled Fish ($15)"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="90dp" />

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/checkBox2"
        android:layout_marginTop="135dp"
        android:text="Fried Chicken ($20)"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="90dp" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginTop="197dp"
        android:text="Steak ($25)"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="90dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="17dp"
        android:text="Order for table:"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="34dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView8"
        android:layout_marginEnd="62dp"
        android:text="Quantity:"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <Button
        android:id="@+id/placeOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/checkBox2"
        android:layout_marginBottom="98dp"
        android:text="Place Order" />

    <Button
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView7"
        android:layout_alignTop="@+id/placeOrder"
        android:text="Back" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="85dp"
        android:layout_height="44dp"
        android:layout_alignTop="@+id/textView6"
        android:layout_marginTop="-8dp"
        android:layout_toStartOf="@+id/backBtn" />

    <EditText
        android:id="@+id/quantity3"
        android:layout_width="67dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/quantity1"
        android:layout_alignTop="@+id/checkBox3"
        android:ems="10"
        android:inputType="number"
        android:text="0" />
</RelativeLayout>